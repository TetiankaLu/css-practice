<header class="header">
  <div>
    {{> logo}}
  </div>    
    <nav class="header-nav">
      <div class="header_nav_right">
        {{> nav list=header}}
          </div>
    </nav>
</header>

<main class="main">
  {{#with info}}
  <div class="info">
   <h1 class="info_title">{{title}}</h1>
   <p class="info_description">{{description}}</p>
   </div>
  {{/with}}

  {{#with form}}
    <form class="form">
      <div class="form_input_list">
     {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" class="form_input"/>
     {{/each}}
     </div> 

      <div class="form_checkbox">
      <input type="checkbox" name="checkbox_name"/>
      <label>{{checkbox.label}}</label>
    </div>

    <button type="submit" class="form_button">{{button}}</button>

    <p class="form_info">{{info}}</p>
     </form>
  {{/with}}
</main>

  <div class="updates">
    {{#with updates}}
    <h2 class="updates_title">{{title}}</h2>

      <div class="updates_list">
        {{#each list}}
          <p class="list_nickname">{{nickname}}</p>
          <p class="list_description">{{description}}</p>

           {{> divider}}
        {{/each}}

       
      </div>

      <div>
        {{#with show_all}}
        <a href="{{url}}" class="show_all">{{text}}</a>
        {{/with}}
      </div>
       {{/with}}
  </div>

  <div class="expirience">
    {{#with expirience}}
     <h3 class="expirience_title">{{title}}</h3>
     <p class="expirience_badge">{{badge}}</p>
     
      <div class="expirience_list">
     {{#each list}}
      <div class="list">
        <strong class="name">{{name}}</strong>
        <p class="details">{{details}}</p>
      </div>
     {{/each}}
     
    {{/with}}
  </div>

   


    
<footer class="footer">
  <div>
    {{> logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
        
    {{#each footer}}
      <div class="col-3">
        <span class="footer_title">{{title}}</span>
          {{> nav list=links isVertical=true}}
      </div>
    {{/each}}
</footer>

 