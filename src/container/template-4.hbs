<header class="header">
  <div>
    {{> logo}}
  </div>    
    <nav class="header-nav">
      <div class="header_nav_right">
        {{> nav list=header}}
          </div>
    </nav>
</header>

{{#with main}}
<div class="main">
   <img src="{{image}}" alt="Main_image" class="main_image">
  <div class="main_content">
    <h1 class="main_title">{{heading}}</h1>
    <p class="main_text">{{description}}</p>
    <a href="{{href}}" class=" button main_button">{{button}}</a>
  </div>
 
</div>
{{/with}}


<main class="featured">
  {{#each featured}}
  <div class="card_featured">
    <div class="featured_photo" style="background-image: url({{photo}})"></div>
    <h2 class="featured_title">{{heading}}</h2>
    <p class="featured_text">{{info}}</p>
    <p class="featured_linkText">{{linkText}}</p>

    <a href="{{linkUrk}}" class="button featured_button">{{linkUrl}}</a>
  </div>
  {{/each}}
</main>

<div class="actions">
  {{#each actions}}
    <div class="actions_content">
      <h3 class="actions_heading">{{heading}}</h3>
      <a href="{{url}}" class="button actions_button">{{text}}</a>
    </div>
    {{/each}}
</div>

    
<footer class="footer">
  <div>
    {{> logo}}
      <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
        
    {{#each footer}}
      <div class="col-3">
        <span class="footer_title">{{title}}</span>
          {{> nav list=links isVertical=true}}
      </div>
    {{/each}}
</footer>

 